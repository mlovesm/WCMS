<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/inc_top"
        android:layout_alignParentTop="true"/>
    <!--공지사항-->
    <LinearLayout
        android:id="@id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top"
        android:padding="4dip"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/border_top"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff333333"
                android:text="대상"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:checkedButton="@+id/offer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="left"
                    >

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="전체"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:id="@+id/radio1" />
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="부서별"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:id="@+id/radio2" />
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="직책별"
                        android:textColor="@color/font_333"
                        android:textStyle="bold"
                        android:id="@+id/radio3" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@drawable/border_top_bottom"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff333333"
                android:text="세부대상"
                />
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/spinner1" />
        </LinearLayout>

        <EditText
            android:id="@id/editText1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/gary_light"
            android:padding="5.0dip"
            android:hint="제목"
            android:textColorHint="@color/font_333"
            android:inputType="textCapCharacters"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:gravity="top"
            android:background="@color/gary_light"
            android:padding="5.0dip"
            android:hint="내용"
            android:textColorHint="@color/font_333"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <!--버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@color/gary_light"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="작성자"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/border_top_bottom"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
    <!-- 버튼 -->
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true">
        <LinearLayout android:background="@color/orange_dark" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">

            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="PUSH" />
        </LinearLayout>
        <LinearLayout android:background="@color/blue2" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="저장" />
        </LinearLayout>
        <LinearLayout android:background="@color/blueviolet" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">

            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="삭제" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>