<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/border_bottom"
        android:text="점검상세현황 보기"
        android:gravity="center" />


    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="4dp"
        >

        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/font_333"
            android:layout_width="80.0dp"
            android:layout_height="wrap_content"
            android:text="점검자"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textView1"
            android:paddingLeft="10dp"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:enabled="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/font_333"
            android:gravity="center_vertical"
            android:text="점검자" />
    </LinearLayout>

    <!-- 버튼 -->
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true">
        <LinearLayout android:background="@color/gary_dark" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView
                android:id="@+id/textButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="닫기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout android:background="@color/blue_dark" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView
                android:id="@+id/textButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="다음"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>