<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/border_bottom"
        android:text="점검상세현황"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_bottom_l"
        >
        <!-- 버튼 -->
        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp">
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="승인"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/box_green" />
        </LinearLayout>
        <!-- 버튼 -->
        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="반려"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/box_gray" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        >
        <EditText
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/font_333"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/gary_line_light"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:hint="내용"
            android:id="@+id/editText1" />
    </LinearLayout>

    <!-- push 내용 추가-->
    <!-- 라인 -->
    <LinearLayout
        android:background="@color/gary_line_light"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear1"
    android:visibility="gone"
    android:layout_marginBottom="4dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp">

            <EditText
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gary_line_light"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="제목"
                android:id="@+id/editText2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:layout_weight="2.0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:background="@color/gary_line_light"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:hint="내용"
                android:id="@+id/editText3" />
            <LinearLayout
                android:background="@color/orange_dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80.0dip"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/textButton3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PUSH"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 버튼 -->
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true">

        <LinearLayout android:background="@color/blue2" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView
                android:id="@+id/textButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="저장"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout android:background="@color/gary_dark" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView
                android:id="@+id/textButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="닫기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>